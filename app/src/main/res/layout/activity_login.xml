<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_x="-50dp"
        android:layout_y="-4dp"
        app:srcCompat="@drawable/img" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="150dp"
        android:layout_y="180dp"
        android:text="LOGIN"
        android:textColor="@color/Lavender"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_x="45dp"
        android:layout_y="250dp"
        android:background="@drawable/custom_btn2"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="40dp"
        android:textColorHint="#526D82" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="72dp"
        android:layout_x="45dp"
        android:layout_y="340dp"
        android:background="@drawable/custom_btn2"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="40dp"
        android:textColorHint="#526D82" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="100dp"
        android:layout_y="450dp"
        android:elevation="20px"
        android:background="@drawable/custom_btn"
        android:text="login"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="550dp"
        android:text="Dont't have account? "
        android:textColor="#000000"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="240dp"
        android:layout_y="550dp"
        android:text="Register Here ! "
        android:textColor="@color/Lavender"
        android:textStyle="bold"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_x="55dp"
        android:layout_y="260dp"
        app:srcCompat="@drawable/user" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_x="55dp"
        android:layout_y="350dp"
        app:srcCompat="@drawable/locked" />

    <TextView
        android:id="@+id/forgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="230dp"
        android:layout_y="400dp"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Forgot Password?" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="590dp"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="OR" />

    <ImageView
        android:id="@+id/googlesignin"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_x="80dp"
        android:layout_y="630dp"
        app:srcCompat="@drawable/googlesigninbutton" />

</AbsoluteLayout>