<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    tools:context=".SignUp">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_centerHorizontal="true"
        android:text="SIGNUP"
        android:textColor="#75D5CA"
        android:textSize="40dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="240dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_textfield"
        android:ems="10"
        android:hint="Email"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="textPersonName"
        android:paddingLeft="50dp" />
    <EditText
        android:id="@+id/fullname"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="50dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="@drawable/custom_textfield"
        android:hint="Full Name" />

    <EditText
        android:id="@+id/username"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_textfield"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="50dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/password"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="450dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_textfield"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="50dp"
        android:textColorHint="@color/black"
        android:textColor="@color/black" />

    <EditText
        android:id="@+id/repassword"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="72dp"
        android:layout_marginTop="520dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_textfield"
        android:ems="10"
        android:hint="Re-Type Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:paddingLeft="50dp" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="55dp"
        app:srcCompat="@drawable/user" />
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="390dp"
        app:srcCompat="@drawable/email" />
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="55dp"
        app:srcCompat="@drawable/locked" />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_marginTop="530dp"
        android:layout_marginLeft="55dp"
        app:srcCompat="@drawable/locked" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="585dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_btn"
        android:elevation="100px"
        android:text="signup"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="655dp"
        android:layout_marginLeft="50dp"
        android:text="Already Registred? "
        android:textColor="#000000"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/loginhere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="655dp"
        android:layout_marginLeft="250dp"
        android:text="Login Here ! "
        android:textColor="#75D5CA"
        android:textStyle="bold"
        android:textSize="22dp" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="322dp"
        android:layout_marginLeft="55dp"
        app:srcCompat="@drawable/idcard" />

</RelativeLayout>